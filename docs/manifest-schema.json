{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://icecrafters.github.io/schemas/metacraft/manifest.schema.json",
  "title": "MetaCraft package",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "The package identifier",
      "pattern": "^[-_a-zA-Z0-9]$"
    },
    "version": {
      "type": "string",
      "description": "The package version. Must be a semantic version."
    },
    "platform": {
      "type": "string",
      "description": "The platform. Must be a valid combination of OS name and architecture."
    }
  }
}